{
  "compilerOptions": {
    "baseUrl": "./",
    "incremental": false,
    "jsx": "react",
    "noEmit": false,
    "outDir": "./.storybook",
    "paths": {
      "~/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "./.storybook/*",
    "./lib/*",
    "./node_modules/*",
    "./src/**/*.stories.*",
    "./src/**/*.test.*",
    "./storybook-static/*",
    "**/test/*",
    "**/icons/*"
  ],
  "extends": "./node_modules/@actinc/eslint-config/tsconfig.json",
  "include": ["./index.d.ts", "./src/**/*"]
}
