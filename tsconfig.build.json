{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "allowJs": true,
    "declaration": true,
    "declarationMap": false,
    "inlineSources": true,
    "inlineSourceMap": false,
    "outDir": "./dist",
    "sourceRoot": "https://github.com/act-org/dls/tree/main/src",
    "sourceMap": true
  },
  "exclude": [
    "./.storybook/*",
    "./lib/*",
    "./node_modules/*",
    "./src/**/*.stories.*",
    "./src/**/internal.tsx",
    "./src/**/*.test.*",
    "./storybook-static/*",
    "**/test/*",
    "**/icons/*"
  ],
}